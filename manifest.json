{
    "manifest_version": 2,
    "name": "Pomodoro Clock",
    "description": "Pomodoro Time Managment tool for the Chrome browser.",
    "version": "1.0",
    "icons": {
        "16": "./assets/alarm-clock.png",
        "48": "./assets/alarm-clock.png",
        "128": "./assets/alarm-clock.png"
    },
    "background": {
        "scripts": ["./src/background.js"]
    },

    "browser_action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "notifications",
        "<all_urls>",
        "alarms",
        "background"
    ],
    "content_scripts":[{
        "matches": ["<all_urls>"],
        "js": [],
        "css": ["./src/clock.css"]
    }]
}